{
    "name": "luyadev/luya-composer",
    "description": "LUYA composer core",
    "keywords": ["luya", "composer"],
    "type": "composer-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Basil Suter",
            "email": "basil@nadar.io"
        }
    ],
    "require": {
        "composer-plugin-api": "^1.1 | ^2.0"
    },
    "require-dev": {
        "composer/composer": "^1.0 | ^2.0@dev",
        "phpunit/phpunit" : "~5.0"
    },
    "autoload": {
        "psr-4": {
            "luya\\composer\\": "src/"
         }
    },
    "autoload-dev" : {
        "psr-4" : {
            "luya\\composer\\tests\\" : "tests"
        }
    },
    "extra": {
        "class": "luya\\composer\\Plugin",
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "config": {
        "platform": {"php": "7.0"}
    }
}